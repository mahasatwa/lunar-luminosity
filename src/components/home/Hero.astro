---
import type { Hero } from '../../utils/contentful';
import { getOptimizedImageUrl } from '../../utils/cloudinary';

interface Props {
  hero: Hero;
}

const { hero } = Astro.props;

const optimizedBackgroundUrl = getOptimizedImageUrl(hero.backgroundImageUrl, {
  width: 1920,
  height: 1080,
  crop: 'fill',
  quality: 80,
  format: 'auto',
});
---

<section
  class="relative min-h-[80vh] flex items-center justify-center bg-cover bg-center"
  style={`background-image: url(${optimizedBackgroundUrl})`}
>
  <div class="absolute inset-0 bg-black bg-opacity-50"></div>
  <div class="container relative z-10 text-white text-center px-4">
    <h1 class="text-5xl md:text-6xl font-bold mb-4">
      {hero.headline}
    </h1>
    <h2 class="text-2xl md:text-3xl font-semibold mb-6">
      {hero.subhead}
    </h2>
    <p class="text-lg md:text-xl max-w-2xl mx-auto">
      {hero.mainText}
    </p>
  </div>
</section> 