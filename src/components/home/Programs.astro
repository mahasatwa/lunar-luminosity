---
import type { Program } from '../../utils/contentful';

interface Props {
  programs: Program[];
}

const { programs } = Astro.props;
---

<section class="py-16 bg-white">
  <div class="container">
    <h2 class="text-4xl font-bold text-center mb-12">Program Studi Unggulan</h2>
    <div class="grid md:grid-cols-2 gap-8">
      {
        programs.map((program) => (
          <div class="bg-gray-50 rounded-lg p-8 shadow-sm">
            <h3 class="text-2xl font-bold mb-4">{program.title}</h3>
            <div class="prose mb-6" set:html={program.content} />
            <div class="space-y-2">
              {program.links.map((link) => (
                <a
                  href={link.url}
                  class="block text-primary hover:text-blue-700 font-medium"
                >
                  {link.text} â†’
                </a>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section> 