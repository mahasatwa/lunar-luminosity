---
import Icon from '../atoms/Icon.astro';
import Button from '../atoms/Button.astro';

interface Props {
  ctaText: string;
  isMenuOpen: boolean;
  onSearchClick: () => void;
  onCtaClick: () => void;
  onHamburgerClick: () => void;
}

const { ctaText, isMenuOpen, onSearchClick, onCtaClick, onHamburgerClick } = Astro.props;
---

<div class="control-buttons flex items-center space-x-4">
  <button class="search-icon-button" onClick={onSearchClick}>
    <Icon name="search" client:visible />
  </button>
  <Button text={ctaText} onClick={onCtaClick} client:visible />
  <button class={`hamburger-button ${isMenuOpen ? 'is-open' : ''}`} onClick={onHamburgerClick}>
    <Icon name={isMenuOpen ? 'close' : 'hamburger'} client:visible />
  </button>
</div>

<style>
  .hamburger-button {
    /* Add basic styling and transition for hamburger/close animation */
    transition: transform 0.3s ease, color 0.3s ease;
  }

  .hamburger-button.is-open {
    transform: rotate(90deg); /* Example rotation */
    color: white; /* Example color change */
  }
</style>