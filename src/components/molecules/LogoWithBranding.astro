---
import Logo from './Logo.astro';
import BrandingText from './BrandingText.astro';

interface Props {
  logoSrc: string;
  logoAlt: string;
  linkHref: string;
}

const { logoSrc, logoAlt, linkHref } = Astro.props;
---

<div class="flex items-center space-x-2">
  <Logo src={logoSrc} alt={logoAlt} />
  <BrandingText href={linkHref} />
</div>