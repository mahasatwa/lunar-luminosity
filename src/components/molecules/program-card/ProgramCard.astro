---
// src/components/molecules/program-card/ProgramCard.astro
import Heading from '../../atoms/heading/Heading.astro';
import Icon from '../../atoms/icons/Icon.astro';

interface Props {
    title: string;
    description: string;
    href: string;
    icon: string;
}

const { title, description, href, icon } = Astro.props;
---
<a href={href} class="block p-8 bg-white rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300">
    <Icon name={icon} class="w-12 h-12 text-blue-600 mb-4" />
    <Heading as="h3" size="md" text={title} addClass="mb-2" />
    <p class="text-gray-600">{description}</p>
</a>
