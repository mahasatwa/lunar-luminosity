---
<!-- Apply modern, minimalist, and professional styling to the footer -->
<!-- Ensure sufficient white space and clear typographic hierarchy -->
<footer class="bg-[#F5F5F5] text-gray-800 py-20 px-6 sm:px-10 md:py-24">
  <div class="max-w-7xl mx-auto">
    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-10 md:gap-8 mb-10"
    >
      <div>
        <h3 class="text-lg font-bold mb-4 font-poppins text-gray-200">
          Tentang STIE Dwimulya
          <!-- Consider using a brand-specific heading style and font (e.g., Swiss-style) -->
        </h3>
        <ul class="space-y-2">
          {
            aboutLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-gray-400 hover:text-white hover:underline transition-colors"
                  <!-- Refine hover state transition for a smoother, modern feel -->
                >
                  {link.text}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <div>
        <h3 class="text-lg font-bold mb-4 font-poppins text-gray-200">
          Informasi Mahasiswa
          <!-- Consider using a brand-specific heading style and font (e.g., Swiss-style) -->
        </h3>
        <ul class="space-y-2">
          {
            studentLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-gray-400 hover:text-white hover:underline transition-colors"
                  <!-- Refine hover state transition for a smoother, modern feel -->
                >
                  {link.text}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <div>
        <h3 class="text-lg font-bold mb-4 font-poppins text-gray-200">
          Sumber Daya
          <!-- Consider using a brand-specific heading style and font (e.g., Swiss-style) -->
        </h3>
        <ul class="space-y-2">
          {
            resourceLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-gray-400 hover:text-white hover:underline transition-colors"
                  target={link.isExternal ? "_blank" : "_self"}
                  <!-- Refine hover state transition for a smoother, modern feel -->
                  rel={link.isExternal ? "noopener noreferrer" : ""}
                >
                  {link.text}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <div>
        <h3 class="text-lg font-bold mb-4 font-poppins text-gray-200">
          Hubungi Kami
          <!-- Consider using a brand-specific heading style and font (e.g., Swiss-style) -->
        </h3>
        <div class="flex space-x-4 mb-6">
          {
            socialLinks.map((social) => (
              <a
                href={social.href}
                class="text-gray-400 hover:text-white transition-colors"
                <!-- Refine hover state transition for a smoother, modern feel -->
                target="_blank"
                rel="noopener noreferrer"
              >
                <span class="sr-only">{social.label}</span>
                <Fragment set:html={social.icon} />
              </a>
            ))
          }
          <!-- Ensure sufficient color contrast for social icons for accessibility -->
        </div>
        <address class="not-italic text-gray-600 space-y-2">
          <p>STIE Dwimulya</p>
          <p>Jl. Jenderal Sudirman No.Kav. 52-53</p>
          <p>Serang, Banten 42118, Indonesia</p>
          <p>Telepon: (0254) 123-456</p>
          <p>Email: info@stiedwimulya.ac.id</p>
        </address>
      </div>
    </div>

    <div
      class="border-t border-gray-300 pt-10 mt-10 text-center text-gray-600 text-sm"
      <!-- Adjust border color and spacing for a minimalist look -->
    >
      <p>
        &copy; {new Date().getFullYear()} STIE Dwimulya. Hak Cipta Dilindungi Undang-Undang.
        <!-- Ensure sufficient color contrast for copyright text -->
      </p>
      <div class="flex justify-center space-x-4 mt-4">
        <a href="/kebijakan-privasi" class="hover:underline hover:text-gray-800 transition-colors"
          >Kebijakan Privasi</a
        <!-- Refine hover state transition for a smoother, modern feel -->
        >
        <span>&bull;</span>
        <a href="/syarat-ketentuan" class="hover:underline hover:text-gray-800 transition-colors"
          >Syarat & Ketentuan</a
        <!-- Refine hover state transition for a smoother, modern feel -->
        >
        <span>&bull;</span>
        <a href="/peta-situs" class="hover:underline hover:text-gray-800 transition-colors">Peta Situs</a>
        <!-- Refine hover state transition for a smoother, modern feel -->
      </div>
    </div>
  </div>
</footer>
