---
// src/components/organisms/columns/Columns.astro
interface Props {
  count: 2 | 3 | 4;
  theme?: 'light' | 'dark';
  removeLine?: boolean;
  isStatHeading?: boolean;
}

const {
  count,
  theme = 'dark',
  removeLine = false,
  isStatHeading = false,
} = Astro.props;

const blockClasses = [
  'c-block b-columns',
  theme === 'light' ? 't-theme--light' : '',
  removeLine ? 'b-columns--remove-line' : '',
  isStatHeading ? 'stat-heading-style' : '',
].join(' ');
---

<div class={blockClasses}>
  <div class="l-container">
    <div class="b-columns__container">
      <div class:list={[`b-columns__row b-columns--count-${count}`]}>
        <div class="b-columns__col">
          <slot name="col-1" />
        </div>
        <div class="b-columns__col">
          <slot name="col-2" />
        </div>
        {count > 2 && (
          <div class="b-columns__col">
            <slot name="col-3" />
          </div>
        )}
        {count > 3 && (
          <div class="b-columns__col">
            <slot name="col-4" />
          </div>
        )}
      </div>
    </div>
  </div>
</div>
