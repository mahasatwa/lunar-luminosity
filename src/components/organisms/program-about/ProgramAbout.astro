---
// src/components/organisms/program-about/ProgramAbout.astro
import Heading from '../../atoms/heading/Heading.astro';
import Badge from '../../atoms/badge/Badge.astro'; // Asumsi atom ini ada atau akan dibuat
---
<section class="py-16">
    <div class="container mx-auto px-6 max-w-4xl">
        <div class="text-center mb-12">
            <Badge text={`Akreditasi ${Astro.props.content.accreditation.status}`} />
            <p class="mt-4 text-lg text-gray-700">{Astro.props.content.overview}</p>
        </div>
        <div class="grid md:grid-cols-2 gap-8 text-center">
            <div>
                <Heading as="h3" size="md" text="Visi" addClass="mb-4" />
                <p class="text-gray-600">{Astro.props.content.vision}</p>
            </div>
            <div>
                <Heading as="h3" size="md" text="Misi" addClass="mb-4" />
                <ul class="list-disc list-inside text-left text-gray-600 space-y-2">
                    {Astro.props.content.missions.map((mission: string) => <li>{mission}</li>)}
                </ul>
            </div>
        </div>
    </div>
</section>
