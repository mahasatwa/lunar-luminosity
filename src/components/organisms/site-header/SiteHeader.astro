---
// src/components/organisms/site-header/SiteHeader.astro
import Logo from '../../atoms/logo/Logo.astro';
import Button from '../../atoms/button/Button.astro';
import HamburgerButton from './HamburgerButton.tsx';
import GlobalNavMenu from './GlobalNavMenu.tsx';
import { globalNavigationData } from '../../../data/NavigationData.ts';
---

<header class="sticky top-0 bg-white/80 backdrop-blur-lg shadow-sm z-50">
    <div class="container mx-auto px-6 flex items-center justify-between h-20">
        <div class="flex-shrink-0">
            <a href="/" aria-label="Beranda STIE Dwimulya">
                <Logo src="/logo-primary.svg" alt="STIE Dwimulya Logo" />
            </a>
        </div>

        {/* Desktop Navigation */}
        <nav class="hidden md:flex items-center">
            <GlobalNavMenu data={globalNavigationData} />
        </nav>

        {/* Call to Action Button */}
        <div class="hidden md:block">
            <Button href="/penerimaan" label="Pendaftaran" />
        </div>

        {/* Hamburger Button for Mobile */}
        <div class="md:hidden">
            <HamburgerButton client:load />
        </div>
    </div>
</header>

{/* Mobile Navigation Panel (controlled by HamburgerButton) */}
<div id="mobile-menu-overlay" class="fixed top-0 left-0 w-full h-full bg-white transform -translate-x-full transition-transform duration-300 ease-in-out z-40 md:hidden">
    <div class="p-6 pt-24">
        <nav>
            <GlobalNavMenu data={globalNavigationData} isMobile={true} />
        </nav>
        <div class="mt-8">
            <Button href="/penerimaan" label="Pendaftaran" />
        </div>
    </div>
</div>
