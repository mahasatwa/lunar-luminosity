---
import Footer from '../components/organisms/site-footer/SiteFooter.astro';
import SiteHeader from "../components/organisms/site-header/SiteHeader.astro";
import GlobalMenuOverlay from "../components/organisms/GlobalMenuOverlay.astro";
import SEO from "../components/utils/SEO.astro";
import "../styles/base.pcss";

export interface Props {
  title: string;
  description: string;
  image?: string;
  ogType?: "website" | "article";
}

const { title, description, image, ogType } = Astro.props;
---

<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <SEO 
      title={title} 
      description={description} 
      image={image}
      ogType={ogType}
    />
  </head>

  <body class="font-sans antialiased text-gray-800 relative">
    {/* 
      client:* directives are temporarily removed to bypass a persistent toolchain bug.
      This allows the site to build, but client-side interactivity in these
      components will need to be re-implemented using a different strategy.
    */}
    <SiteHeader />
    <GlobalMenuOverlay class="global-menu-overlay" />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
