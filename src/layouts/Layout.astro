---
import GlobalNav from "../components/global/GlobalNav.astro";
import Footer from '../components/global/Footer.astro';
import SEO from "../components/utils/SEO.astro"; // <-- 1. Impor komponen SEO
import "../styles/base.pcss";

// 2. Perbarui interface Props untuk menerima data SEO
export interface Props {
  title: string;
  description: string;
  image?: string;
  ogType?: "website" | "article";
}

const { title, description, image, ogType } = Astro.props;
---

<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    {/* 3. Panggil komponen SEO di sini, teruskan semua props */}
    <SEO 
      title={title} 
      description={description} 
      image={image}
      ogType={ogType}
    />
  </head>

  <body class="font-sans antialiased text-gray-800">
    <GlobalNav />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>