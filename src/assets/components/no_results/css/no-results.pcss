/* -----------------------------------------------------------------------------
 *
 * Component: No results
 * It's the content were no posts match the query on a category or other loop.
 *
 * ----------------------------------------------------------------------------- */

.no-results {
	display: flex;
	text-align: center;
    align-items: center;
    justify-content: center;
	font-family: var(--font-family-gt-america-standard-reg);
	font-size: 20px;
	margin-top: 65px;
}

.no-results .no-results__title {
	font-weight: 400;
	font-family: var(--font-family-gt-america-standard-bold);

}
