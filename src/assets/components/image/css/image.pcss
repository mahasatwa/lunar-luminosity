/* -----------------------------------------------------------------------------
 *
 * Component: Image
 *
 * ----------------------------------------------------------------------------- */

/* -----------------------------------------------------------------------------
 * Image Component: Wrapper element
 *
 * Generally, a `figure` for foreground usages and a `div` for background usages.
 * Customizable via component's attributes.
 * ----------------------------------------------------------------------------- */

.c-image {}

/* -----------------------------------------------------------------------------
 * Image Component: Image Link
 *
 * If provided, wraps the component's image element
 * ----------------------------------------------------------------------------- */

.c-image__link {}

/* -----------------------------------------------------------------------------
 * Image Component: Image Element
 *
 * An `img` for foreground usages and a `div` for background usages.
 * ----------------------------------------------------------------------------- */

.c-image__image {
	/* CASE: Background image implementation. */

	.c-image--bg & {
		background: center center no-repeat;
		background-size: cover;
		bottom: 0;
		height: 100%;
		left: 0;
		position: absolute;
		right: 0;
		top: 0;
		width: 100%;
	}

	/* CASE: Apply an overlay. */

	.c-image--overlay & {

		&:after {
			content: '';
			position: absolute;
			width: 100%;
			height: 100%;
			background: linear-gradient(180deg, rgba(14, 14, 14, 0) 29.22%, var(--color-wrought-iron) 100%);
		}
	}

	.c-image--bg-split & {
		@media (--viewport-medium) {
			width: 50%;
		}
		/* CASE: Apply an overlay left */

		.c-image--overlay-left & {

			&:after {
				content: '';
				position: absolute;
				width: 100%;
				height: 100%;
				background: linear-gradient(to left, rgba(14, 14, 14, 0) 29.22%, var(--color-wrought-iron) 100%);
				opacity: 0.9;

			}

		}
	}
}
