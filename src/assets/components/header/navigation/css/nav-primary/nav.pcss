.nav-primary {
	color: var(--color-white);
	overflow: hidden;
	padding: 0;
	position: relative;
	flex: 1;

	/* CASE: overflow gradient/shadow */
	&:before,
	&:after {
		content: '';
		position: absolute;
		right: 0;
		left: 0;
		background: linear-gradient(180deg, rgba(14, 14, 14, 0) 29.22%, #0e0e0e 100%);
		z-index: 1;
		pointer-events: none;
	}

	&:before {
		top: 0;
		transform: rotate(-180deg);
		height: calc(var(--spacer-site-header-mobile) + 45px);
		background: linear-gradient(0deg, rgba(14,14,14,1) 42%, rgba(0,0,0,0) 100%);

		@media (--viewport-medium) {
			height: calc(var(--spacer-site-header-tablet) + 35px);
		}

		@media (--viewport-xlarge) {
			height: calc(var(--spacer-site-header-desktop) + 50px);
		}
	}

	&:after {
		bottom: 0;
		height: 40px;

		@media (--viewport-xlarge) {
			height: 80px;
		}
	}
}

