/* -----------------------------------------------------------------------------
 * Global: Title
 * ----------------------------------------------------------------------------- */

.c-block__header {

	.c-block__title {
		@mixin t-display;

		@media (--viewport-medium) {
			@mixin t-display-large;

			padding-right: var(--spacer-30);
		}
	}
}

