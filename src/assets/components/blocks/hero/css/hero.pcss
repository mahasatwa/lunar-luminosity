/* -----------------------------------------------------------------------------
 * Hero: Content
 * ----------------------------------------------------------------------------- */

.b-hero__bg-video {
	bottom: 0;
	object-fit: cover;
	height: 100%;
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	width: 100%;
}

.auto-height-video .b-hero__bg-video {
	height: auto;
}

.b-hero__meta-wrap {
	display: flex;
	justify-content: center;
	position: relative;
	width: auto;
	z-index: 2;

	@media (--viewport-full) {
		justify-content: flex-end;
		margin-left: calc(50% - 50vw);
		margin-right: calc(50% - 50vw);
		padding-right: var(--grid-gutter);
	}
}

.b-hero__meta {
	align-items: center;
	display: flex;
	padding-top: 100px;

	@media (--viewport-full) {
		max-width: 430px;
	}
}

.b-hero__meta-caption {
	@mixin t-body-small;

	color: var(--color-ink);
	/* TODO: Apply brand typography variable */
	/* font-family: var(--font-family-swiss-style-medium); */
	font-size: 14px;
	font-weight: 500;
	line-height: 1.5;
	margin-left: 10px;
	order: 2;

	@media (--viewport-full) {
		max-width: 334px;
		order: 1;
		text-align: right;
	}

	.t-theme--light & {
		color: var(--color-parchment);
	}
}

.b-hero__video-trigger {
	margin-right: 0;
	order: 1;

	@media (--viewport-full) {
		margin-left: 15px;
		margin-right: var(--spacer-30);
		order: 2;
	}

	.a-btn__text:after {
		content: var(--icon-pause);
	}

	/* CASE: Video Paused */
	.video-paused & {

		.a-btn__text:after {
			content: var(--icon-play-solid);
		}
	}
}

/* Feature Article */

.b-hero__featured-article-wrap {
	display: flex;
	justify-content: flex-end;
	padding-top: 42px;
	position: relative;
	z-index: 2;

	/* CASE: No Caption or Video */
	.no-caption & {
		padding-top: 110px;
	}

	/* CASE: No Featured Story */
	.no-featured-story & {
		display: none;
	}

	@media (--viewport-full) {
		padding-right: 48px;
		padding-top: 72px;
	}
}

.b-hero__featured-article {
	width: 100%;

	@media (--viewport-full) {
		padding-left: var(--grid-gutter);
		max-width: 50%;
	}
}

.b-hero__featured-article-title {
	@mixin t-display-x-small;

	/* TODO: Apply brand typography variable based on Swiss style */
	/* font-family: var(--font-family-swiss-style-headline); */
	font-weight: normal;
	margin-bottom: 16px;

	@media (--viewport-full) {
		@mixin t-display-small;

		max-width: 550px;
	}
}

.b-hero__featured-article-text {
	@mixin t-body;
	/* TODO: Apply brand typography variable for body text (Swiss style) */

	margin-bottom: 32px;
}
