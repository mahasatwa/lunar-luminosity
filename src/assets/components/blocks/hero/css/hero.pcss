/* -----------------------------------------------------------------------------
 *
 * Component: Block: Hero
 *
 * ----------------------------------------------------------------------------- */

.b-hero {
	/* TODO: Apply specific brand background color variable if needed */
	background: var(--color-parchment); 
	position: relative;
	display: flex;
	align-items: flex-start;
	margin: 0;
	overflow: hidden;
	/* Adjust padding for more white space and minimalist feel */
	padding: var(--spacing-jumbo) 0; /* Use a variable for consistent large spacing */
	z-index: 1;

	&.has-featured-story,
	&.no-featured-story:not(.no-caption) {
		padding-bottom: var(--spacing-large); /* Use a variable */
	}

	@media (--viewport-medium) {
		/* Adjust padding for medium viewports */
		padding-top: var(--spacing-extra-large); /* Use a variable */
	}

	.c-content-block__leadin {
		/* TODO: Apply brand typography variable based on Swiss style principles */
		/* font-family: var(--font-family-swiss-style); */
		font-size: 14px;
		margin-bottom: var(--spacer-30);

		.single-in_focus &,
		.post-type-in_focus & {
			display: flex;
			flex-direction: column;
			align-items: center;

			a.b-hero__leadin-in-focus {
				text-transform: none;
			}
		}
	}

	.c-content-block__underline {
		/* Adjust margins for better spacing */
		margin-bottom: var(--spacer-40);
		margin-top: var(--spacer-40);
	}

	.c-content-block__cta {
		display: flex;
		/* Add some gap for minimalist button spacing */
		gap: var(--spacing-medium); 
		justify-content: center;
		/* Adjust margin top for spacing from subtitle */
		margin-top: var(--spacing-large); /* Use a variable */
		margin-top: var(--spacer-60);
	}

	&:before {
		animation: heroTopLine 1s linear forwards;
		border-left: 1px solid var(--color-shade);
		content: "";
		height: 0;
		left: 50%;
		position: absolute;
		top: 0;
		transform: translateX(-50%);
		width: 1px;
		z-index: 1;
	}

	&:after {
		/* Review overlay background for professional feel */
		background: linear-gradient(180deg, rgba(225, 225, 225, 0) 29.9%, var(--color-parchment-subtle-overlay) 100%); /* Use a variable or adjust opacity */
		content: '';
		left: 0;
		position: absolute;
		top: 0;
		width: 100%;
		height: 100%;
	}

	/* CASE: Reversed out/light theme */
	&.t-theme--light {
		background: var(--color-wrought-iron);

		/* Review light theme overlay background */
		&:after {
			background: linear-gradient(180deg, rgba(14, 14, 14, 0) 29.9%, var(--color-wrought-iron) 100%);
		}
	}

	/* In Focus only */
	.c-dropdown {
		display: inline-block;
		margin: 0 auto var(--spacer-30);

		.c-dropdown__picker {
			border-color: var(--color-parchment);
			min-width: 240px;

			&:hover {
				background-color: var(--color-parchment);
				color: var(--color-ink);
				transition: var(--transition);

				.icon {
					color: var(--color-ink);
				}
			}
		}

		&.t-theme--light {

			.c-dropdown__picker {
				border-color: var(--color-ink);
				color: var(--color-ink);

				&:hover {
					background-color: var(--color-ink);
					color: var(--color-parchment);
					transition: var(--transition);

					.icon {
						color: var(--color-parchment);
					}
				}
			}

			.icon {
				color: var(--color-ink);
			}
		}

		.t-sink & {

			.c-dropdown__options {
				list-style: none;
				margin-left: 0;
				padding-left: 0;

				> li {

					&:first-child {

						> a > span {
							background-size: 100% 1px;
						}
					}
				}

				li {
					color: var(--color-ink);
					/* TODO: Apply brand typography variable for list items */
					/* font-family: var(--font-family-swiss-style-bold); */
					text-align: left;
					padding-left: 5px;
					padding-right: 5px;
					a {
						color: var(--color-ink);
						line-height: 1.2;
						padding-left: 15px;

						span {
							background-image: linear-gradient(currentColor, currentColor);
							background-position: 0 100%;
							background-repeat: no-repeat;
							background-size: 0 1px;
							color: var(--color-blackboard);
							transition: all 0.3s;
							position: relative;
						}

						&:hover {
							background-color: transparent;

							span {
								color: var(--color-ink);
								background-size: 100% 1px;
								transition: var(--transition);

								/* CASE: remove underline animation for touch devices */
								@media (--touch-device) {
									background-size: 0 1px;
								}
							}
						}
					}
				}
			}

			.c-dropdown__submenu {
				list-style: none;
				margin-top: 0;
				padding-left: 20px;
				position: relative;

				&:before {
					border-left: 1px solid var(--color-slate);
					content: "";
					height: calc(100% - 14px);
					position: absolute;
					left: 20px;
					top: 2px;
				}

				li {
					font-family: var(--font-family-gt-america-standard-reg);
					font-weight: 400;
					margin-top: 4px;
					width: 100%;

					&:last-child {
						margin-bottom: 0;

						a {
							padding-bottom: 8px;
						}
					}

					a {
						padding-left: 10px;
						padding-top: 2px;
					}
				}
			}
		}
	}
}

/* Existing animation review: Can this be smoother or more aligned with 'kampus perubahan'? */
@keyframes heroTopLine { 
	0% {
		height: 0;
	}
	100% {
		height: 140px;
	}
}

/* -----------------------------------------------------------------------------
 * Hero: Overlay
 * ----------------------------------------------------------------------------- */

.b-hero__media-overlay--soft,
.b-hero__media-overlay--medium,
.b-hero__media-overlay--dark,
.b-hero__media-overlay--darker {

	&:after {
		content: '';
		left: 0;
		position: absolute;
		top: 0;
		width: 100%;
		height: 100%;
	}
}

/* Overlays */

.b-hero__media-overlay--soft {

	&:after {
		background: var(--overlay-light-light);
	}

	/* CASE: Reversed out/light theme */
	.t-theme--light & {

		&:after {
			background: var(--overlay-black-light);
		}
	}
}

.b-hero__media-overlay--medium {

	&:after {
		background: var(--overlay-light-medium);
	}

	/* CASE: Reversed out/light theme */
	.t-theme--light & {

		&:after {
			background: var(--overlay-black-medium);
		}
	}
}

.b-hero__media-overlay--dark {

	&:after {
		background: var(--overlay-light-dark);
	}

	/* CASE: Reversed out/light theme */
	.t-theme--light & {

		&:after {
			background: var(--overlay-black-dark);
		}
	}
}

.b-hero__media-overlay--darker {

	&:after {
		background: var(--overlay-light-darker);
	}

	/* CASE: Reversed out/light theme */
	.t-theme--light & {

		&:after {
			background: var(--overlay-black-darker);
		}
	}
}

/* -----------------------------------------------------------------------------
 * Hero: Content
 * ----------------------------------------------------------------------------- */

.b-hero__content {
	/* Adjust padding for content block */
	padding-bottom: var(--spacing-medium); /* Use a variable */
	position: relative;
	z-index: 1;

	@media (--viewport-medium) {
		/* Adjust padding for medium viewports */
		padding-bottom: var(--spacing-large); /* Use a variable */
		padding-top: var(--spacing-extra-large); /* Use a variable */
	}
}

.b-hero__bottom-line {

	&:before {
		border-left: 1px solid var(--color-shade);
		content: "";
		height: 80px;
		left: 50%;
		position: absolute;
		transform: translateX(-50%);
		width: 1px;
		z-index: 1;

		@media (--viewport-full) {
			animation: heroBottomLineNoCTA 2s ease-in forwards 1.5s;
			animation-iteration-count: 1;
			height: 0;
		}
	}

	.no-caption.no-featured-story & {

		&:before {
			height: 100%;

			@media (--viewport-full) {
				height: 0;
			}
		}
	}
}

/* Existing animation review: Can this be smoother or more aligned with 'kampus perubahan'? */
@keyframes heroBottomLineNoCTA { 
	0% {
		height: 0;
	}
	100% {
		height: 100%;
	}
}

/* Existing animation review: Can this be smoother or more aligned with 'kampus perubahan'? */
@keyframes heroBottomLine { 
	0% {
		height: 0;
	}
	100% {
		height: 100%;
		bottom: -100%;
	}
}

.b-hero__leadin {
	/* TODO: Apply brand typography variable */
	/* font-family: var(--font-family-swiss-style-medium); */
	font-family: var(--font-family-gt-america-standard-med);
	display: block;
}

.t-sink p.b-hero__leadin a.b-hero__leadin-in-focus {
	border-bottom-color: transparent !important;

	&:hover {
		border-bottom-color: var(--color-ink) !important;
		color: var(--color-ink) !important;
	}
}

.t-sink .t-theme--light p.b-hero__leadin a.b-hero__leadin-in-focus {

	&:hover {
		border-bottom-color: var(--color-parchment) !important;
		color: var(--color-parchment) !important;
	}
}

.b-hero__leadin-in-focus {
	/* TODO: Apply brand typography variable */
	/* font-family: var(--font-family-swiss-style-bold); */
	font-size: 20px;
	letter-spacing: -0.1px;
	margin-bottom: var(--spacer-30);
	width: 80px;

	> span.a-btn__text {
		display: inline-block;
		position: relative;

		&:before {
			align-items: center;
			background-color: var(--color-ink);
			border-radius: 50%;
			color: var(--color-parchment);
			/* TODO: Ensure icon styling aligns with brand - potentially use SVG */
			content: var(--icon-chevron-left); 
			display: flex;
			font-family: var(--font-family-core-icons);
			font-size: 12px;
			font-weight: bolder;
			height: 20px;
			justify-content: center;
			left: -30px;
			position: absolute;
			text-decoration: none;
			top: 5px;
			transition: all 0.15s ease-in-out;
			width: 20px;
		}
	}

	.t-theme--light & {

		> span.a-btn__text {

			&:before {
				background-color: var(--color-grout);
				color: var(--color-ink);
			}
		}
	}
}

.b-hero__underline {
	@mixin t-body;

	/* Adjust margin top for better spacing */
	letter-spacing: -0.1px;
	margin: 36px auto 0;
	max-width: var(--grid-6-col);
}

.c-block__header .b-hero__title {
	padding-right: 0;
}

