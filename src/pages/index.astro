---
// src/pages/index.astro
// The Page is the highest level, responsible for layout and data fetching.
// It should only contain the Layout and the main Template for the page.

import Layout from '../layouts/Layout.astro';
import HomepageTemplate from '../components/templates/homepage-template/HomepageTemplate.astro';

// This data would typically come from a CMS or an API call.
// For now, it's defined here. This data will be passed down to the template.
const homepageData = {
  seo: {
    title: "STIE Dwimulya - Unggul dalam Pendidikan Ekonomi & Bisnis",
    description: "STIE Dwimulya, kampus rakyat dan kampus perubahan di Serang, Banten. Menawarkan S1 Akuntansi dan S1 Manajemen terakreditasi BAN-PT. Fokus pada akses pendidikan, pemberdayaan UMKM, dan penelitian budaya.",
  },
  // Data for the organisms within the template will be passed down.
  // Example: heroStatementData, mediaCarouselData, etc.
};
---

<Layout 
  title={homepageData.seo.title} 
  description={homepageData.seo.description}
>
  {/* 
    The Page's only job is to render the appropriate template.
    All presentational logic is handled by the template and its children (organisms, molecules, atoms).
  */}
  <HomepageTemplate 
    heroStatementData={homepageData.heroStatement}
  />
</Layout>
