---
import Layout from '../layouts/Layout.astro';
import { getPageContent } from '../utils/contentful';

const pageContent = await getPageContent('home');
---

<Layout title="Home">
  {pageContent ? (
    <div class="prose lg:prose-xl mx-auto">
      <h1>{pageContent.title}</h1>
      <div set:html={pageContent.content} />
    </div>
  ) : (
    <div class="text-center py-12">
      <h1 class="text-4xl font-bold text-gray-900">Welcome to Our Site</h1>
      <p class="mt-4 text-xl text-gray-600">Please configure your content in Contentful.</p>
    </div>
  )}
</Layout>
