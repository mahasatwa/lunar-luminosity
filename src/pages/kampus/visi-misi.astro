---
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/organisms/hero/Hero.astro';
import type { NavItem } from '../../data/NavigationData';

const breadcrumbs: NavItem[] = [
  { text: 'Home', href: '/' },
  { text: 'Tentang Kami', href: '#' },
  { text: 'Visi & Misi', href: '/kampus/visi-misi' },
];

const pageContent = await Astro.glob('../../data/facts/visi-misi.md');
const { Content } = pageContent[0];
---

<Layout title="Visi & Misi - STIE Dwimulya" breadcrumbs={breadcrumbs}>
  <Hero
    title="Visi & Misi STIE Dwimulya"
    subtitle="Panduan arah dan tujuan kami dalam mencetak generasi ekonomi unggul."
    backgroundImage="https://images.pexels.com/photos/1105379/pexels-photo-1105379.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
  />

  <section class="section">
    <div class="container mx-auto px-4 py-8 max-w-3xl prose">
      <Content />
    </div>
  </section>
</Layout>
