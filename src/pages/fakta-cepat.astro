---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/organisms/hero/Hero.astro';
import type { NavItem } from '../data/NavigationData';

const breadcrumbs: NavItem[] = [
  { text: 'Home', href: '/' },
  { text: 'Fakta Cepat', href: '/fakta-cepat' },
];

const pageContent = await Astro.glob('../data/facts/statistik-kampus-fakta-cepat.md');
const { Content } = pageContent[0];
---

<Layout title="Fakta Cepat - STIE Dwimulya" breadcrumbs={breadcrumbs}>
  <Hero
    title="Statistik Kampus & Fakta Cepat"
    subtitle="Informasi singkat dan data penting tentang STIE Dwimulya."
    backgroundImage="https://images.pexels.com/photos/340152/pexels-photo-340152.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
  />

  <section class="section">
    <div class="container mx-auto px-4 py-8 max-w-3xl prose">
      <Content />
    </div>
  </section>
</Layout>
