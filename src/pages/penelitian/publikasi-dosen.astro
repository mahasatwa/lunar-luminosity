---
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/organisms/hero/Hero.astro';
import type { NavItem } from '../../data/NavigationData';

const breadcrumbs: NavItem[] = [
  { text: 'Home', href: '/' },
  { text: 'Penelitian & Publikasi', href: '/penelitian' },
  { text: 'Publikasi Dosen', href: '/penelitian/publikasi-dosen' },
];

const pageContent = await Astro.glob('../../../data/facts/publikasi-dosen.md');
const { Content } = pageContent[0];
---

<Layout title="Publikasi Dosen - STIE Dwimulya" breadcrumbs={breadcrumbs}>
  <Hero
    title="Publikasi Dosen STIE Dwimulya"
    subtitle="Karya-karya ilmiah terbaru dari para akademisi kami yang berkontribusi pada pengembangan ilmu pengetahuan."
    backgroundImage="https://images.pexels.com/photos/5926382/pexels-photo-5926382.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
  />

  <section class="section">
    <div class="container mx-auto px-4 py-8 max-w-3xl prose">
      <Content />
    </div>
  </section>
</Layout>
