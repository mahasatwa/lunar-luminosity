---
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/organisms/hero/Hero.astro';
import type { NavItem } from '../../data/NavigationData';

const breadcrumbs: NavItem[] = [
  { text: 'Home', href: '/' },
  { text: 'Tentang Kami', href: '#' },
  { text: 'Sejarah Kampus', href: '/kampus/sejarah' },
];

const pageContent = await Astro.glob('../../data/facts/sejarah-singkat.md');
const { Content } = pageContent[0];
---

<Layout title="Sejarah Kampus - STIE Dwimulya" breadcrumbs={breadcrumbs}>
  <Hero
    title="Sejarah Kampus STIE Dwimulya"
    subtitle="Menelusuri jejak langkah pendidikan yang telah membentuk ribuan profesional."
    backgroundImage="https://images.pexels.com/photos/3401403/pexels-photo-3401403.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
  />

  <section class="section">
    <div class="container mx-auto px-4 py-8 max-w-3xl prose">
      <Content />
    </div>
  </section>
</Layout>
