---
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/organisms/hero/Hero.astro';
import type { NavItem } from '../../data/NavigationData';

const breadcrumbs: NavItem[] = [
  { text: 'Home', href: '/' },
  { text: 'Tentang Kami', href: '#' },
  { text: 'Struktur Organisasi', href: '/kampus/struktur-organisasi' },
];

const pageContent = await Astro.glob('../../data/facts/struktur-organisasi.md');
const { Content } = pageContent[0];
---

<Layout title="Struktur Organisasi - STIE Dwimulya" breadcrumbs={breadcrumbs}>
  <Hero
    title="Struktur Organisasi STIE Dwimulya"
    subtitle="Tata kelola yang efektif untuk mencapai visi dan misi institusi."
    backgroundImage="https://images.pexels.com/photos/3184465/pexels-photo-3184465.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
  />

  <section class="section">
    <div class="container mx-auto px-4 py-8 max-w-3xl prose">
      <Content />
    </div>
  </section>
</Layout>
