---
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/organisms/hero/Hero.astro';
import type { NavItem } from '../../data/NavigationData';

const breadcrumbs: NavItem[] = [
  { text: 'Home', href: '/' },
  { text: 'Penelitian & Publikasi', href: '/penelitian' },
];

// Dynamically import the markdown content
const pageContent = await Astro.glob('../../data/facts/ikhtisar-penelitian.md');
const { Content } = pageContent[0];
---

<Layout title="Penelitian & Publikasi - STIE Dwimulya" breadcrumbs={breadcrumbs}>
  <Hero
    title="Penelitian & Publikasi"
    subtitle="Menjadi pusat unggulan riset yang berkontribusi pada ilmu pengetahuan dan masyarakat."
    backgroundImage="https://images.pexels.com/photos/3861969/pexels-photo-3861969.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
  />

  <section class="section">
    <div class="container mx-auto px-4 py-8 max-w-3xl prose">
      <Content />
    </div>
  </section>
</Layout>