---
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/organisms/hero/Hero.astro';
import type { NavItem } from '../../data/NavigationData';

const breadcrumbs: NavItem[] = [
  { text: 'Home', href: '/' },
  { text: 'Penelitian & Publikasi', href: '/penelitian' },
  { text: 'Pendanaan Penelitian', href: '/penelitian/pendanaan' },
];

const pageContent = await Astro.glob('../../../data/facts/pendanaan-penelitian.md');
const { Content } = pageContent[0];
---

<Layout title="Pendanaan Penelitian - STIE Dwimulya" breadcrumbs={breadcrumbs}>
  <Hero
    title="Pendanaan Penelitian"
    subtitle="Informasi mengenai sumber pendanaan dan proses aplikasi untuk mendukung aktivitas riset."
    backgroundImage="https://images.pexels.com/photos/3862379/pexels-photo-3862379.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
  />

  <section class="section">
    <div class="container mx-auto px-4 py-8 max-w-3xl prose">
      <Content />
    </div>
  </section>
</Layout>